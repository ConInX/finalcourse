
<left><span>首页 > 我的所有文章</span></left>
<right><span style="float:right">
    <% if session[:name] !=nil%>用户：<%= session[:name]%>   , <a href="/logout/logout" >退出</a>, 
    <% else %>
       <a href="/login/login" >登录</a>
    <%end%>
    <%= link_to '返回', :controller => 'user_course' , :action => 'user_course'  %> 
    </span></right>
    <br></br>
<table class="bordered" border = "3px" bordercolor =black align = "center">
  <thead>
    <tr>
     <center> <h3><b>我发表的所有文章</b></h3><%= @coursename %></h2></center>
    </tr>
    <tr>
      <th width="400" height="30">文章名称</th>
      <th width="200" height="30">所属课程</th>
      <th width="80" height="30">浏览次数</th>
      <th width="80" height="30">评论次数</th>
      <th width="100" height="30">发表时间</th>
      <th colspan="2">操作</th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td width="400" align="center"><%= link_to article.articlename, :controller => 'article' , :action => 'details' ,:aname => article.articlename ,:cname =>article.coursename%></td>
        <td width="200" align="center"><%= article.coursename %></td>
        <td width="80" align="center"><%= article.viewtimes.to_i %></td>
        <td width="80" align="center"><%= article.answertimes.to_i %></td>
        <td width="100" align="center"><%= article.createtime %></td>
        <td width="100"><%= link_to '删除',:controller => 'articlesbyauser',:action => 'delete',:id=>article.id %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

