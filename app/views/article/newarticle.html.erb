  
  <left><span>首页 > <%= params[:cname]%> > 发表文章</span></left>
<right><span style="float:right">
    <% if session[:name] !=nil%>用户：<%= session[:name]%>   , <a href="/logout/logout" >退出</a>, 
    <% else %>
       <a href="/login/login" >登录</a>
    <%end%>
    <%= link_to '返回', :controller =>'article' ,  :action => 'article' ,:cname=>params[:cname] %> 
    </span></right>
    <br></br>
    <em  style="color:red"><%= @hint %></em> 
  <div class="bootstrap-frm">
      <h1>Please Input Your Article
<span>Please fill all the texts in the fields.</span>
</h1>
<%= form_for :article, :url => {:action => 'newarticle'} do |f|  %>
<label>
    <span>
    文章名称:  </span>  <%= f.text_field :articlename %>
    
    </label>
   <label>
    <span>
    内容: </span>  <br> <%= f.text_area :content,:placeholder => '文章正文', :rows =>20, :cols=>100 %>
    
    </label>
    <label>
    <span>&nbsp;</span>
    <%= submit_tag '发表',:aname=>params[:aname],:cname=>params[:cname],:class =>'button'%>
    <%= submit_tag '返回',:aname=>params[:aname],:cname=>params[:cname],:class =>'button'%>
    </label>
<% end %>
</div>